<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reinco.App">
	<Application.Resources>

        <ResourceDictionary>
            <!-- Color -->
            <Color x:Key="ColorPrincipal">#3498DB</Color>
            <Color x:Key="ColorSecundario">#FF5555</Color>
            <Color x:Key="ColorPrincipalFuente">#2C3E50</Color>
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
            <Color x:Key="BoxColor">#F7F7F7</Color>
            <Color x:Key="ColorAuxiliar">#8AC22D</Color>
            <Color x:Key="ColorAuxiliar_2">#A8A8A8</Color>
            <!-- Menu Colores -->
            <Color x:Key="ColorMenu">#2980B9</Color>
            <Color x:Key="ColorMenuFuente">#ECF0F1</Color>
            <!-- End Color -->
            
            <!-- Styles -->
            <Style x:Key="BontonPrimario" TargetType="Button" >
                <Setter Property="BackgroundColor" Value="{StaticResource ColorAuxiliar}"/>
                <Setter Property="TextColor" Value="#ffffff"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <!-- End Styles -->
            
        </ResourceDictionary>

	</Application.Resources>
</Application>